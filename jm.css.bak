.header{
	overflow: hidden;
	padding: 20px 10px;
	background-image: linear-gradient(to right, #ffc4b2, #da9682);
	border-style: inset;
	border-radius:12px;
	border-width:3px;
	border-bottom-color:white;
}
span{
	display:inline;
}


.imgLogo{
	float:right;
	height:100;
}

.tagline{
  padding-top:15px;
  margin-bottom: 1em;
  color: #ffffff;
  text-align: left;
  padding: 10px;
  font-family: Times new roman;
  text-decoration: none;
  line-height: 1px;
  border-radius: 4px;
  font-size:1.5vw;
  vertical-align:middle;
}

.imgTitle{
	height: 100px;
	padding:0vw;
	margin:0vw;
	vertical-align:middle;
}

.navi a{
  float: left;
  color: #ffffff;
  text-align: left;
  padding: 1vw;
  text-decoration: none;
  font-size: 18px;
  line-height: 25px;
  border-radius: 4px;
  margin:0.00001vw;

}
.header-right a:hover {
  background-color: #FDD6EA;
  color: black;
}

.header a.active {
  background-color: #F087E8;
  color: white;
}

.header-right {
	padding-bottom: 50px;
	background-image: linear-gradient(to right, #ffc4b2, #da9682);
	border-radius:12px;
	border-width:3px;
	margin-top: 20px;
	font-size:3vw;
 
}

li a, .dropbutton {
	display: block;
	color: white;
	text-align: center;
	padding: 0px;
	text-decoration: none;
	}

	
	
	li.dropdown {
	display: inline-block;
	float: left;
	}

	.dropdown-content {
	display: none;
	position: absolute;
	background-color: pink;
	min-width: 160px;
	box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.5);
	z-index: 1;
	margin-top: 50px;
	}

	.dropdown-content a {
	float: none;
	color: black;
	padding: 20px 30px;
	text-decoration: none;
	display: block;
	text-align: left;
	margin:0;
	}

	.dropdown-content a:hover {
	background-color: #f1f1f1;
	}

	.dropdown:hover .dropdown-content {
	display: block;
	}
